  "keywords": [
    "cli",
    "file explorer"
  ],
  "author": "",
  "dependencies": {
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "meow": "^10.1.1",
    "open": "^8.2.1",
    "socket-io": "^1.0.0",
    "socket.io": "^4.2.0",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "deep-equal": "^2.0.5",
    "nodemon": "^2.0.13"
  }
